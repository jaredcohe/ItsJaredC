          <div class="code_block">
            <div class="code_header">
              app/admin/products.rb
                    <div id="clippy_5436409" class="clippy">
        <span style="display:none" class="clippy_code">ActiveAdmin.register Product do
  scope :unreleased
  
  index do
    column :name
    column :category
    column "Release Date", :released_at
    column :price, :sortable =&gt; :price do |product|
      div :class =&gt; "price" do
        number_to_currency product.price
      end
    end
    default_actions
  end
end</span>
        <span class="clippy_label"></span>
        <object type="application/x-shockwave-flash" data="/flash/clippy.swf" width="14" height="14" id="clippy_5436409_flash">
        <param name="movie" value="/flash/clippy.swf">
<param name="allowScriptAccess" value="always">
<param name="quality" value="high">
<param name="scale" value="noscale">
<param name="FlashVars" value="target=%23clippy_5436409">
<param name="bgcolor" value="#E0E0E0"></object>
      </div>

            </div>
            <div class="CodeRay">
  <div class="code"><pre><span class="co">ActiveAdmin</span>.register <span class="co">Product</span> <span class="r">do</span>
  scope <span class="sy">:unreleased</span>
  
  index <span class="r">do</span>
    column <span class="sy">:name</span>
    column <span class="sy">:category</span>
    column <span class="s"><span class="dl">"</span><span class="k">Release Date</span><span class="dl">"</span></span>, <span class="sy">:released_at</span>
    column <span class="sy">:price</span>, <span class="sy">:sortable</span> =&gt; <span class="sy">:price</span> <span class="r">do</span> |product|
      div <span class="sy">:class</span> =&gt; <span class="s"><span class="dl">"</span><span class="k">price</span><span class="dl">"</span></span> <span class="r">do</span>
        number_to_currency product.price
      <span class="r">end</span>
    <span class="r">end</span>
    default_actions
  <span class="r">end</span>
<span class="r">end</span></pre></div>
</div>

