<h1>Editing category</h1>

<%= form_for @category do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <%= f.submit 'Save' %>
<%- end %>

<%= link_to 'Show', @category %> |
<%= link_to 'Back', categories_path %>
