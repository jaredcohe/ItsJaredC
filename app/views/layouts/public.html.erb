<!doctype html>
<html>
<head>
    <title>Seedtap</title>
    <meta content="Curated education tutorials syllabus lesson plan" name="description" />
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>

  <body id="<%= params[:controller].parameterize %>_controller">
    
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>

    <%= render 'layouts/user' %>
    <%= render 'layouts/menu' %>

    <%= yield %>

  </body>
</html>
