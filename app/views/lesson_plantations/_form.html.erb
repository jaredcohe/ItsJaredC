<%= form_for(@lesson_plantation) do |f| %>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id, :value => @user.id %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => '30x6' %>
  </div>
  <div class="field">
    <%= f.label :keywords %><br />
    <%= f.text_area :keywords, :size => '30x6' %>
  </div>
  <div class="field">
    <%= f.label :clean %><br />
    <%= f.check_box :clean %>
  </div>

  <div class="field">
    <%= f.fields_for :knowledges do |builder| %>
      <%= render 'knowledges/knowledges_url_form', :f => builder %>
    <% end %>
  </div>

  <div class="new_fields">
    <%= make_add_knowledge_field_link f %>
  </div>
  
  <div class="actions">
    <%= f.submit "Lesson Plan" %>
  </div>
<% end %>